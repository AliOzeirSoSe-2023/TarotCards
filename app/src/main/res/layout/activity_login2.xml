<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".login">


    <EditText
        android:id="@+id/userSpiritualNameLoggin"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#ECD5A3"
        android:drawableLeft="@drawable/baseline_person"
        android:drawablePadding="10dp"
        android:drawableTint="#EED7A4"
        android:ems="10"
        android:hint="SpiritualName"
        android:inputType="textPersonName"
        android:textColor="#ECD5A3"
        android:textColorHint="#B3ECD5A3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoLogin" />

    <EditText
        android:id="@+id/userEmailInputLoggin"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ECD5A3"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        android:drawableTint="#EED7A4"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:textColor="#ECD5A3"
        android:textColorHint="#B3ECD5A3"
        app:layout_constraintEnd_toEndOf="@+id/userSpiritualNameLoggin"
        app:layout_constraintStart_toStartOf="@+id/userSpiritualNameLoggin"
        app:layout_constraintTop_toBottomOf="@+id/userSpiritualNameLoggin" />

    <EditText
        android:id="@+id/userPasswordInputLoggin"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ECD5A3"
        android:drawableLeft="@drawable/baseline_security"
        android:drawablePadding="10dp"
        android:drawableTint="#EDD6A3"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textColor="#ECD5A3"
        android:textColorHint="#B3ECD5A3"
        app:layout_constraintEnd_toEndOf="@+id/userEmailInputLoggin"
        app:layout_constraintStart_toStartOf="@+id/userEmailInputLoggin"
        app:layout_constraintTop_toBottomOf="@+id/userEmailInputLoggin" />

    <TextView
        android:id="@+id/infoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="Login"
        android:textColor="#EFD8A5"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/userForgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Forgot Password?"
        android:textColor="#B3EDD6A3"
        app:layout_constraintEnd_toEndOf="@+id/userPasswordInputLoggin"
        app:layout_constraintTop_toBottomOf="@+id/userPasswordInputLoggin" />

    <Button
        android:id="@+id/btnuserLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#EDD6A3"
        android:text=" Login Now"
        app:layout_constraintEnd_toEndOf="@+id/userForgotpassword"
        app:layout_constraintStart_toStartOf="@+id/userPasswordInputLoggin"
        app:layout_constraintTop_toBottomOf="@+id/userForgotpassword"
        android:onClick="onBtnClick"/>/>

    <LinearLayout
        android:layout_width="243dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/btnuserLogin"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/btnuserLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnuserLogin">

        <TextView
            android:id="@+id/infoRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Registered Yet?"
            android:textColor="#B3ECD5A2" />

        <TextView
            android:id="@+id/userSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  SignUp Here"
            android:textColor="#ECD5A2"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>